{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "parser": "babel-eslint",
    "ecmaFeatures": { "jsx": true }
  },
  "extends": ["eslint:recommended", "plugin:unicorn/recommended", "prettier"],
  "rules": {
    "no-console": 0,
    "unicorn/prevent-abbreviations": [
      "error",
      {
        "replacements": {
          "e": { "event": false },
          "res": { "result": false },
          "props": false
        }
      }
    ]
  },
  "globals": {
    "document": true
  },
  "env": {
    "es6": true,
    "node": true,
    "worker": true,
    "browser": true
  }
}
